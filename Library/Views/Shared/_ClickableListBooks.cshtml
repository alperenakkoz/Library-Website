@model List<Library.Models.Books>
@{
    bool isChecked = (bool)(ViewData["CheckParm"] ?? false);
}
@foreach (var item in Model)
{
    <div style="display: inline-block; padding: 15px 40px;">
        <label class="image-checkbox">
            <img class="img-responsive" src="@item.ImagePath" alt="@item.Title" width="161" height="250" />
            <input type="checkbox" name="image[]" value="@item.Id" @(isChecked ? "checked" : "") />
            <i class="fa fa-check hidden"></i>
        </label>
        <center>
            <span><b>@(item.Title.Length > 20 ? @item.Title.Substring(0, 17) + "..." : @item.Title)</b></span>
        </center>
    </div>
}


<style>
    .nopad {
        padding-left: 0 !important;
        padding-right: 0 !important;
    }

    .image-checkbox {
        position: relative;
        cursor: pointer;
        box-sizing: border-box;
        -moz-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        border: 4px solid transparent;
        margin-bottom: 0;
        outline: 0;
    }

        .image-checkbox input[type="checkbox"] {
            display: none;
        }

    .image-checkbox-checked {
        border-color: #4783B0;
    }

    .image-checkbox .fa {
        display: none;
    }

    .image-checkbox-checked .fa {
        position: absolute;
        color: #4A79A3;
        background-color: #fff;
        padding: 10px;
        top: 0;
        right: 0;
        display: block !important;
    }
</style>